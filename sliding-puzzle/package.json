{
  "name": "sliding-puzzle",
  "version": "1.0.0",
  "description": "A ReactJS sliding puzzle with a built-in Webpack server",
  "main": "index.js",
  "scripts": {
    "start": "npm run build",
    "build": "webpack -d && cp src/index.html dist/index.html && webpack-dev-server --content-base src/ --inline",
    "build:prod": "webpack -p && cp src/index.html dist/index.html",
    "clean": "rm -r dist/"
  },
  "author": "usman-tahir",
  "license": "ISC",
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0"
  }
}
